    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Model.GallaryMaster;
@using System.Data;
<style>
    .team-item img {
        border: 4px solid #ff3115;
        transition: transform 0.6s ease-in-out;
        border-radius: 8px;
    }
</style>

